<div class="container mt-5">
  <!-- search bar -->
  <div class="row" id="search-bar">
    <div class="col-12">
      <form action="/restaurants">
        <div class="input-group mb-3">
          <input type="text" name="search" class="form-control" placeholder="Enter restaurant name to search..."
            aria-label="Restaurant Name..." aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit" id="search-button">Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <!-- restaurant list -->
  <div class="row" id="data-panel">
    {{#each restaurants as |restaurant|}}
    <div class="col-sm-3">
      <a href="/restaurant/{{restaurant.id}}" class="text-secondary">
        <div class="card mb-2">
          <img class="card-img-top" src="{{restaurant.image}}"
            alt="Card image cap">
          <div class="card-body restaurant-item-body">
            <h6 class="card-title">{{restaurant.name}}</h6>
          </div>
        </div>
      </a>
     </div>
     {{/each}}
  </div>
</div>